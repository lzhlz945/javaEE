<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhang.mapper.EmployeeMapper2">
<!--where=if-->
   <select id="getEmployee" resultType="Employee">
           select id,last_name lastName,email,gender from tbl_employee
           <where>
               <if test="id != null and id != ''">
                   id=#{id}
               </if>
               <if test="lastName != null and lastName != ''">
                 and  last_name=#{lastName}
               </if>


           </where>
   </select>
<!--trim-->
    <select id="getEmployee1" resultType="Employee">
           select id,last_name lastName,email,gender from tbl_employee
         <trim prefix="where" suffixOverrides="and" prefixOverrides="and" >
             <if test="id != null and id != ''">
                 id=#{id} and
             </if>
             <if test="lastName != null and lastName != ''">
                last_name=#{lastName}  and
             </if>

               <if test="email != null and email != ''">
                   email=#{email}
             </if>

         </trim>


   </select>

    <select id="getEmployee2" resultType="Employee">
           select * from tbl_employee
         <where>
             <choose>
                 <when test="id != null">
                     id=#{id}
                 </when>
                 <when test="lastName != null">
                     last_name like #{lastName}
                 </when>
                 <when test="email != null">
                     email=#{email}

                 </when>
                 <otherwise>
                     gender=1
                 </otherwise>

             </choose>

         </where>


   </select>

    <update id="updateById">
        update tbl_employee
        <set>
        <if test="id != null and id != ''">
            id=#{id} ,
        </if>
        <if test="lastName != null and lastName != ''">
            last_name=#{lastName} ,
        </if>

        <if test="email != null and email != ''">
            email=#{email}
        </if>
        </set>
        where id=#{id}
    </update>

    <select id="getEmployee3" resultType="Employee">

        select * from tbl_employee where id in
        <foreach collection="list" item="ee" open="(" close=")" separator=",">
            #{ee}
        </foreach>
    </select>

    <!--批量插入-->
    <insert id="insert1">
        insert into tbl_employee(id,last_name,gender,email,dp_id)  values
        <foreach collection="emps" item="ee" separator=",">
            (
            #{ee.id},
            #{ee.lastName},
            #{ee.gender},
            #{ee.email},
            #{ee.dept.id}
            )

        </foreach>


    </insert>
    <!--第二种批量插入-->
    <insert id="insert2">
        <foreach collection="emps" item="ee" separator=";">
        insert into tbl_employee(id,last_name,gender,email,dp_id)  values
            (
            #{ee.id},
            #{ee.lastName},
            #{ee.gender},
            #{ee.email},
            #{ee.dept.id}
            )

        </foreach>


    </insert>
